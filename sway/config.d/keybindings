# List of keybindings for Sway.

bindsym $mod+Space exec $menu
bindsym $mod+q kill

# Program shortcuts.

bindsym $mod+Return exec swaymsg "exec $term"
bindsym $mod+b exec swaymsg "workspace 2; move workspace to output HDMI-A-1; exec flatpak run org.mozilla.firefox"
bindsym $mod+f exec swaymsg "workspace 3; move workspace to output DP-3; exec thunar"
bindsym $mod+n exec swaymsg "workspace 5; move workspace to output HDMI-A-1; exec joplin"
bindsym $mod+y exec swaymsg "workspace 7; move workspace to output HDMI-A-1; exec flatpak run io.freetubeapp.FreeTube"
bindsym $mod+j exec swaymsg "workspace 7; move workspace to output HDMI-A-1; exec flatpak run com.github.iwalton3.jellyfin-media-player"
bindsym $mod+s exec swaymsg "workspace 8; move workspace to output DP-3; exec flatpak run com.valvesoftware.Steam"
bindsym $mod+v exec swaymsg "workspace 9; move workspace to output DP-3; exec virt-manager"
bindsym $mod+m exec swaymsg "workspace 10; move workspace to output HDMI-A-1; exec flatpak run org.mozilla.Thunderbird"

# Toggle floating.

bindsym $mod+Shift+Space floating toggle

# Fullscreen mode.

bindsym $mod+Shift+f fullscreen

# Screen lock.

bindsym $mod+l exec swaylock -C ~/.config/swaylock/config

# Sway environment.

bindsym $mod+Shift+r reload; exec notify-send 'sway' 'Restarted'
bindsym $mod+Shift+e exit
bindsym $mod+Shift+p reload; exec systemctl poweroff

# Move focus.

bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down

# Move window.

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down

# Resize window.

bindsym $mod+Ctrl+Left resize shrink width 20px
bindsym $mod+Ctrl+Right resize grow width 20px

# Change positioning.

bindsym $mod+Shift+h split h, layout default
bindsym $mod+Shift+v split v, layout default

#
# Screen Capture
#

bindsym Print exec sh -c 'grim -g "$(slurp)" ~/Imagens/Screenshots/$(date +"%Y-%m-%d_%H-%M-%S").png && notify-send "Grim" "Selected image saved to ~/Imagens/Screenshots"'
