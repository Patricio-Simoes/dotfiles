input * {
 xkb_layout "pt"
}

# Super key.

set $mod Mod4

floating_modifier $mod

# Theme change script.

bindsym Ctrl+0 exec $HOME/Documentos/bookworm-scripts/scripts/others/change_theme.sh 0
bindsym Ctrl+1 exec $HOME/Documentos/bookworm-scripts/scripts/others/change_theme.sh 1
bindsym Ctrl+2 exec $HOME/Documentos/bookworm-scripts/scripts/others/change_theme.sh 2

# Terminal and Menu.

set $term alacritty
set $menu wofi --show drun

# Home row direction keys.

set $left j
set $down k
set $up i
set $right l

exec systemctl --user import-environment

include ~/.config/sway/config.d/*
include ~/.config/sway/themes/gruvbox
